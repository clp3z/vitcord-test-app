<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="typeface" format="enum">
        <enum name="roboto_regular" value="0"/>
        <enum name="roboto_medium" value="1"/>
        <enum name="roboto_bold" value="2"/>
        <enum name="roboto_black" value="3"/>
        <enum name="proxima_nova_regular" value="4"/>
        <enum name="proxima_nova_bold" value="5"/>
        <enum name="proxima_nova_extra_bold" value="6"/>
        <enum name="proxima_nova_black" value="7"/>
    </attr>

    <declare-styleable name="CustomTextView">
        <attr name="typeface"/>
    </declare-styleable>

    <declare-styleable name="CustomButton">
        <attr name="typeface"/>
    </declare-styleable>

    <declare-styleable name="CustomEditText">
        <attr name="typeface"/>
    </declare-styleable>

    <declare-styleable name="CustomRadioButton">
        <attr name="typeface"/>
    </declare-styleable>

    <declare-styleable name="CustomToggleButton">
        <attr name="typeface"/>
    </declare-styleable>

    <declare-styleable name="CustomTabLayout">
        <attr name="typeface"/>
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
        <attr name="border_overlay" format="boolean" />
        <attr name="fill_color" format="color" />
    </declare-styleable>

</resources>